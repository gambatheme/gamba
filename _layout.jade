doctype
html(lang="en")
    head
        title
            | Sample Title
        meta(charset="utf-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge,chrome=1")
        meta(name='viewport', content='width=device-width, initial-scale=1.0')
        
        // FONT CSS
        link(type="text/css", rel='stylesheet', href="http://fonts.googleapis.com/css?family=Roboto:300,400,700,900")
        link(type="text/css", rel="stylesheet", href="assets/font/font-icon/font-awesome/css/font-awesome.css")
        
        // LIBRARY CSS
        link(type="text/css", rel="stylesheet", href="assets/libs/bootstrap/css/bootstrap.min.css")
        
        // STYLE CSS
        link(type="text/css", rel='stylesheet', href='assets/css/layout.css')
        link(type="text/css", rel='stylesheet', href='assets/css/components.css')
        link(type="text/css", rel='stylesheet', href='assets/css/responsive.css')
            
    body
        // HEADER
        header
            != partial("_includes/header")

            //- CASE: MULTI HEADER
            //- if (current.source == 'homepage-01')
            //-     != partial("_includes/header-01")
            //- else if (current.source == 'homepage-02')
            //-     != partial("_includes/header-02")
            //- else
            //-     != partial("_includes/header")

        // WRAPPER
        #wrapper-content
            // PAGE WRAPPER
            #page-wrapper
                // MAIN CONTENT
                .main-content
                    // CONTENT
                    .content
                        != yield

        // FOOTER
        footer
            != partial("_includes/footer")

            //- CASE: MULTI FOOTER
            //- if (current.source == 'homepage-01')
            //-     != partial("_includes/footer-01")
            //- else if (current.source == 'homepage-02')
            //-     != partial("_includes/footer-02")
            //- else
            //-     != partial("_includes/footer")

        // LIBRARY JS
        script(src="assets/libs/jquery/jquery-2.1.4.min.js")
        script(src="assets/libs/bootstrap/js/bootstrap.min.js")

        // MAIN JS
        script(src="assets/js/main.js")

        // LOADING JS FOR PAGE
        for page, key in public._data
            if(current.source == key)
                for js in page.url_script
                    if(js.src != undefined)
                        script(src='#{js.src}')